@{
    ViewBag.Title = "Detail rule";
}
<script>
    $(function () {
        var ruleId = $("#ruleId").val();
        ko.applyBindings(new RuleDetailViewModel(ruleId));
    });
</script>
<input type="hidden" id="ruleId" value="@ViewBag.DetailId" />
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading"><h4><i class="fa fa-fw fa-pencil"></i> Rule detail</h4></div>
        <div class="panel panel-body">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5>Rule members</h5>
                </div>
                <div class="panel panel-body">
                    <form class="form-horizontal">
                        <div class="container">
                            <div class="row">
                                <div class="form-group">
                                    <label for="name" class="control-label col-xs-2">Name</label>
                                    <div class="col-xs-3">
                                        <input type="text" data-bind="value: name" class="form-control input-sm" id="name" placeholder="Name rule">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h5>Available actions</h5>
                </div>
                <div class="panel panel-body">
                    <div class="col-md-4 col-md-offset-2">
                        <table>
                            <tbody data-bind="foreach: actionList">
                                <tr>
                                    <td data-bind="text: name"></td>
                                    <td>
                                        <input type="checkbox" data-bind="checked: enabled, click: $parent.onEnableChanged" />
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2" data-bind="text: countSelected()"></td>
                                </tr>
                            </tfoot>

                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer clearfix">
            <div class="pull-right">
                <button data-bind="click :onSave" class="btn btn-primary"><i class="fa fa-fw fa-save"></i>Save</button>
            </div>
        </div>
    </div>
</div>