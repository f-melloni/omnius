@model FSS.Omnius.Modules.Entitron.Entity.Hermes.Smtp
@{
    Layout = "~/Views/Shared/_PartialViewAjaxLayout.cshtml";
}
<div>
    <h4>Detail záznamu</h4>
    <table class="details-list table table-striped">
        <tr>
            <td>@Html.DisplayNameFor(model => model.Name)</td>
            <td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Server)</td>
            <td>@Html.DisplayFor(model => model.Server)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Auth_User)</td>
            <td>@Html.DisplayFor(model => model.Auth_User)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Auth_Password)</td>
            <td>@(Model.Auth_Password.Length > 0 ? "********" : "")</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Use_SSL)</td>
            <td>@(Model.Use_SSL == true ? "ano" : "ne")</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Is_Default)</td>
            <td>@(Model.Is_Default == true ? "ano" : "ne")</td>
        </tr>
</table>
</div>
<p class="nexusDetailsButtons">
    @Ajax.RouteLink("Upravit", "Hermes", new { @action = "Edit", @id = Model.Id }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentContainer" }, new { @class = "btn btn-omnius-blue" })
    @Ajax.RouteLink("Smazat", "Hermes", new { @action = "Delete", @id = Model.Id }, new AjaxOptions() { Confirm = "Opravdu chcete záznam smazat?" }, new { @class = "btn btn-omnius-red" })
</p>
