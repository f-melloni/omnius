@model FSS.Omnius.Entitron.Entity.Mozaic.Template

@using (Html.BeginRouteForm("Mozaic", new {@action = "Update"}, FormMethod.Post))
{
    <div class="form-group col-sm-12">
        <div>
            <label class="control-label col-sm-2">
                Název
            </label>
        </div>
        <div class="col-sm-3">
            @Html.TextBoxFor(x => x.Name)
        </div>
    </div>
    <div class="form-group col-sm-12">
        <div>
            <label class="control-label col-sm-2">
                Kategorie
            </label>
        </div>
        <div class="col-sm-3">
            @Html.DropDownListFor(x => x.Category, new SelectList(ViewBag.Categories))
        </div>
    </div>
    <div class="form-group col-sm-12">
        <div>
            <label class="control-label col-sm-2">
                HTML
            </label>
        </div>
        <div class="col-sm-7">
            @Html.TextAreaFor(x => x.Html, new { @style = "width: 100%", @rows="5" })
        </div>
    </div>
    <div class="form-group col-sm-12">
        <div>
            <label class="control-label col-sm-2">
                Stránky
            </label>
        </div>
        <div class="col-sm-3">
            @Html.DropDownListFor(x => x.Pages, new SelectList(ViewBag.Pages))
        </div>
    </div>

    <div class="col-sm-12">
        <button type="submit" class="btn btn-primary">Upravit šablonu</button>
    </div>
}