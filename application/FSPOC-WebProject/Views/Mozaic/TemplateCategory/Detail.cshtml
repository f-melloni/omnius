@model FSS.Omnius.Entitron.Entity.Mozaic.TemplateCategory
@{
    Page.Title = "Omnius Mozaic";
    Layout = "~/Views/Shared/_OmniusAdminLayout.cshtml";
    Page.ModuleClass = "mozaicModule";
}

<h2>Detail</h2>

<div class="form-group">
    <div>
        <label class="control-label">
            Název
        </label>
    </div>
    <div>
        <input type="text" />@Model.Name
    </div>
</div>
<div class="form-group">
    <div>
        <label class="control-label">
            Šablony
        </label>
    </div>
    <div>
        <input type="text" />@Model.Templates.Select(x => x.Name)
    </div>
</div>
<div class="form-group">
    <div>
        <label class="control-label">
            Předek
        </label>
    </div>
    <div>
        <input type="text" />@Model.Parent.Name
    </div>
</div>
<div class="form-group">
    <div>
        <label class="control-label">
            Potomci
        </label>
    </div>
    <div>
        <input type="text" />@Model.Children.Select(x => x.Name)
    </div>
</div>
@Html.ActionLink("Zpět", "Index", new { @class = "btn btn-default" })