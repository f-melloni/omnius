@{
    Page.Title = "Omnius Overview";
    Layout = "~/Views/Shared/_OmniusAdminLayout.cshtml";
    Page.ModuleClass = "overviewModule";
}

<div id="overviewHeaderArea">
    App: <span id="headerAppName">Default app</span><br /> Metablock: <span id="headerMetablockName">Metablock 1</span>
</div>
<div id="overviewMenu">
    <button id="btnAddBlock" class="btn-omnius-rectangular">Add block</button>
    <button id="btnAddMetaBlock" class="btn-omnius-rectangular">Add metablock</button>
    <hr />
    <button id="btnSave" class="btn-omnius-rectangular">Save</button>
    <button id="btnLoad" class="btn-omnius-rectangular">Load</button>
    <button id="btnClear" class="btn-omnius-rectangular">Clear</button>
</div>
<div id="overviewPanel">
    <div class="block" id="block1" style="left: 150px; top: 150px;" blockId="0" tableId="6">
        <div class="blockName">Log in screen</div>
        <div class="tableName">Users</div>
    </div>
    <div class="block" id="block2" style="left: 550px; top: 300px;" blockId="1" tableId="2">
        <div class="blockName">Second block</div>
        <div class="tableName">Table2</div>
    </div>
    <div class="block" id="block3" style="left: 950px; top: 150px;" blockId="2" tableId="3">
        <div class="blockName">Third block</div>
        <div class="tableName">Table3</div>
    </div>
    <div class="block" id="block4" style="left: 950px; top: 450px;" blockId="3" tableId="4">
        <div class="blockName">Fourth block</div>
        <div class="tableName">Table4</div>
    </div>
    <div class="metablock" id="metablock1" style="left: 135px; top: 460px;" metablockId="1">
        <div class="metablockName">Metablock example</div>
        <div class="metablockSymbol fa fa-th-large"></div>
    </div>
</div>
<div id="add-block-dialog" title="Add block">
    <form>
        <fieldset>
            <table class="formTable">
                <tr>
                    <td><label for="block-name">Block name</label></td>
                    <td><input type="text" name="block-name" id="block-name" value="" class="text ui-widget-content ui-corner-all"></td>
                </tr>
                <tr>
                    <td><label for="table-dropdown">Table</label></td>
                    <td><select name="table-dropdown" id="table-dropdown"></select></td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>
<div id="add-metablock-dialog" title="Add metablock">
    <form>
        <fieldset>
            <table class="formTable">
                <tr>
                    <td><label for="metablock-name">Metablock name</label></td>
                    <td><input type="text" name="metablock-name" id="metablock-name" value="" class="text ui-widget-content ui-corner-all"></td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>
<div id="rename-metablock-dialog" title="Rename metablock">
    <form>
        <fieldset>
            <label for="metablock-name">Choose a new name</label>
            <input type="text" name="metablock-name" id="metablock-name" value="" class="text ui-widget-content ui-corner-all" style="width:365px;">
        </fieldset>
    </form>
</div>
