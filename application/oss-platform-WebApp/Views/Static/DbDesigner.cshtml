@inherits System.Web.Mvc.WebViewPage
@section head{
    <link href="~/Content/Style/Common.css" rel="stylesheet" />
    <link href="~/Content/Style/DbDesigner.css" rel="stylesheet" type="text/css" />
}
@{
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    Page.Title = "FSS Database Designer";
}
<script src="~/Scripts/DatabaseDesigner/DbSqlServerDef.js"></script>
<script src="~/Scripts/DatabaseDesigner/DbDialogs.js"></script>
<script src="~/Scripts/DatabaseDesigner/DbInit.js"></script>
<script src="~/Scripts/DatabaseDesigner/DbVisualConfiguration.js"></script>
<script src="~/Scripts/DatabaseDesigner/DbUtils.js"></script>
<script src="~/Scripts/DatabaseDesigner/DbSave.js"></script>
<script src="~/Scripts/DatabaseDesigner/DbLoad.js"></script>

<div class="top-bar-container">Default database scheme</div>
<button type="button" id="switchToWorkflow" class="btn">Switch to workflow designer</button>

<div class="toolbox">
    <div class="menuButtons">
        <button type="button" id="btnAddTable" class="btn btn-primary btn-lg">Add table</button>
        <button type="button" id="btnSaveScheme" class="btn btn-default btn-lg">Save scheme</button>
        <button type="button" id="btnLoadScheme" class="btn btn-default btn-lg">Load scheme</button>
        <button type="button" id="btnClearScheme" class="btn btn-danger btn-lg">Clear scheme</button>
    </div>
</div>

<div class="work-area-container">
    <div id="database-container" class="database-container"></div>
</div>

<div id="add-table-dialog" title="Add table">
    <form>
        <fieldset>
            <table class="formTable">
                <tr>
                    <td><label for="new-table-name">Table name</label></td>
                    <td><input type="text" name="name" id="new-table-name" value="" class="text ui-widget-content ui-corner-all"></td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>

<div id="edit-table-dialog" title="Edit table">
    <form>
        <fieldset>
            <table class="formTable">
                <tr>
                    <td><label for="table-name">Table name</label></td>
                    <td><input type="text" name="name" id="table-name" value="" class="text ui-widget-content ui-corner-all"></td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>

<div id="add-column-dialog" title="Add column">
    <form>
        <fieldset>
            <table class="formTable">
                <tr>
                    <td><label for="column-name">Column name</label></td>
                    <td><input type="text" name="name" id="column-name" value="" class="text ui-widget-content ui-corner-all"></td>
                </tr>
                <tr>
                    <td><label for="column-type">Type</label></td>
                    <td>
                        <select name="column-type" id="column-type-dropdown"></select>
                    </td>
                </tr>
                <tr>
                    <td><label for="primary-key-checkbox">Primary key</label></td>
                    <td><input type="checkbox" name="primary-key" id="primary-key-checkbox" value="" class="text ui-widget-content ui-corner-all"></td>
                </tr>
                <tr>
                    <td><label for="allow-null-checkbox">Allow Null</label></td>
                    <td><input type="checkbox" name="allow-null" id="allow-null-checkbox" class="text ui-widget-content ui-corner-all"></td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>

<div id="edit-column-dialog" title="Edit column">
    <form>
        <fieldset>
            <table class="formTable">
                <tr>
                    <td><label for="column-name">Column name</label></td>
                    <td><input type="text" name="column-name" id="column-name" value="" class="text ui-widget-content ui-corner-all"></td>
                </tr>
                <tr>
                    <td><label for="column-type">Type</label></td>
                    <td>
                        <select name="column-type" id="column-type-dropdown"></select>
                    </td>
                </tr>
                <tr>
                    <td><label for="primary-key-checkbox">Primary key</label></td>
                    <td><input type="checkbox" name="primary-key" id="primary-key-checkbox" class="text ui-widget-content ui-corner-all"></td>
                </tr>
                <tr>
                    <td><label for="allow-null-checkbox">Allow Null</label></td>
                    <td><input type="checkbox" name="allow-null" id="allow-null-checkbox" class="text ui-widget-content ui-corner-all"></td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>

<div id="edit-relation-dialog" title="Edit relation">
    <form>
        <fieldset>
            <label for="relation-type">Relation type</label><br />
            <input type="radio" name="relation-type" value="1" checked> 1:1 - one to one<br>
            <input type="radio" name="relation-type" value="2"> 1:N - one to many<br>
            <input type="radio" name="relation-type" value="3"> N:1 - many to one<br>
            <input type="radio" name="relation-type" value="4"> M:N - many to many<br>
            <span class="deleteRelation"><input type="radio" name="relation-type" value="Delete"> none - delete this relation</span><br>
        </fieldset>
    </form>
</div>