@{ Layout = "~/Views/Shared/_OmniusUserAppLayout.cshtml"; }@{ Dictionary<string, string> formState = (Dictionary<string, string>)ViewData["formState"]; }<div class="mozaicBootstrapPage"><div class="container"><header class=""><h1 class="" style="color: #000000;">@(@"Edit broadcast message")</h1></header><form class="form-horizontal" method="post"><div class="panel panel-default" ><div class="panel-body"><div class="form-group"><label for="message_input" class="col-xs-2" pull-left="pull-left">@(@"Message")</label><div class="col-md-9"><textarea class="form-control input-lg empty-element" name="message_input" value="" required="required" id="message_input" data-toggle="tooltip" data-placement="top" title="Time, when the message appears. To turn on instantly, leave it blank.">@(formState.ContainsKey("message_input") ? formState["message_input"] : ViewData["inputData_message_input"])</textarea></div></div>
