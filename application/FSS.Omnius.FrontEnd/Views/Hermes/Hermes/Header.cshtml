@{
    Layout = "~/Views/Shared/_PartialViewAjaxLayout.cshtml";
}
<div id="upperPanel">
    <div class="panelLabel">Hermes</div>
    <svg class="backgroundDecoration" width="540px" height="565px">
        <path d="M31 0 L31 28 L65 62 L376 62" stroke="#49c4f1" stroke-width="1" fill="none" />
        <path d="M31 295 L31 108 L65 74 L376 74" stroke="#49c4f1" stroke-width="1" fill="none" />
        <path d="M31 47 L52 68 L31 89 L10 68 Z" stroke="#49c4f1" stroke-width="1" fill="none" />
    </svg>
    <img class="decorationWatcheye" src="~/Content/Images/watcheye_small.png" />
    <div class="tileMenuArea">
        <a href="/Hermes/SMTP">
            <div id="hermesMenuSMTP" class="tileMenuItem">
                <div class="buttonLabel">SMTP Servery</div>
                <div class="fa fa-server"></div>
                <div class="itemCount">@ViewData["SMTPServersCount"]</div>
            </div>
        </a>
        <a href="/Hermes/Template">
            <div id="hermesMenuTemplate" class="tileMenuItem">
                <div class="buttonLabel">E-mailové šablony</div>
                <div class="fa fa-envelope"></div>
                <div class="itemCount">@ViewData["EmailTemplatesCount"]</div>
            </div>
        </a>
        <a href="/Hermes/Incoming">
            <div id="hermesIncoming" class="tileMenuItem">
                <div class="buttonLabel">Příchozí e-maily</div>
                <div class="fa fa-envelope-square"></div>
                <div class="itemCount">@ViewData["IncomingEmailCount"]</div>
            </div>
        </a>
        <a href="/Hermes/Queue">
            <div id="hermesMenuQueue" class="tileMenuItem">
                <div class="buttonLabel">Fronta e-mailů</div>
                <div class="fa fa-copy"></div>
                <div class="itemCount">@ViewData["EmailQueueCount"]</div>
            </div>
        </a>
    </div>
    <div id="hideUpperPanelIcon" class="fa fa-caret-up"></div>
</div>
<div id="minimizedUpperPanel">
    <div class="panelLabel">Hermes</div>
    <div id="showUpperPanelIcon" class="fa fa-caret-down"></div>
</div>
