@model FSS.Omnius.Modules.Entitron.Entity.Mozaic.Js

<div class="form form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2">Application:</label>
        <div class="col-sm-10">
            <span class="form-control-static">@Model.MozaicBootstrapPage.ParentApp.Name</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Page:</label>
        <div class="col-sm-10">
            <span class="form-control-static">@Model.MozaicBootstrapPage.Name</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Name:</label>
        <div class="col-sm-10">
            <span class="form-control-static">@Model.Name</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">JS code:</label>
        <div class="col-sm-10">
            <span class="form-control-static"><pre>@Model.Value</pre></span>
        </div>
    </div>

    <div>
        @Ajax.RouteLink("Edit", "Mozaic", new { @action = "Update", @id = Model.Id }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentContainer" }, new { @class = "btn btn-primary" })
        @Html.RouteLink("Delete", "Mozaic", new { @action = "Delete", @id = Model.Id }, new { @class = "btn btn-danger" })

        @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-default" })
    </div>
</div>