@model FSS.Omnius.Modules.Entitron.Entity.Mozaic.Js

<div class="form form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2">Aplikace:</label>
        <div class="col-sm-10">
            <span class="form-control-static">@Model.Application.Name</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Stránka:</label>
        <div class="col-sm-10">
            <span class="form-control-static">@(Model.Page != null ? Model.Page.Name : "---")</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Název:</label>
        <div class="col-sm-10">
            <span class="form-control-static">@Model.Name</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">JS kód:</label>
        <div class="col-sm-10">
            <span class="form-control-static"><pre>@Model.Value</pre></span>
        </div>
    </div>

    <div>
        @Ajax.RouteLink("Upravit", "Mozaic", new { @action = "Update", @id = Model.Id }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentContainer" }, new { @class = "btn btn-primary" })
        @Html.RouteLink("Odstranit", "Mozaic", new { @action = "Delete", @id = Model.Id }, new { @class = "btn btn-danger" })

        @Html.ActionLink("Zpět", "Index", new { }, new { @class = "btn btn-default" })
    </div>
</div>