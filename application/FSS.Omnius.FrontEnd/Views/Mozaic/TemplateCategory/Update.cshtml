@model FSS.Omnius.Modules.Entitron.Entity.Mozaic.TemplateCategory

<script type="text/javascript">
    $('#addChildren').onclick(function () {
        $('#children').clone(true);
    })
</script>

@using (Html.BeginForm("Update", "TemplateCategory", FormMethod.Post))
{
    <div class="form-group col-sm-8">
        <div>
            <label class="control-label col-sm-2">
                Name
            </label>
        </div>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Name)
        </div>
    </div>
    <div class="form-group col-sm-8">
        <div>
            <label class="control-label col-sm-2">
                Parent
            </label>
        </div >
        <div class="col-sm-3">
            @Html.DropDownListFor(x => x.Parent, new SelectList(ViewBag.Categories))
        </div>
    </div>
    

    <div class="col-sm-8">
        <button type="submit" class="btn btn-primary">Edit category</button>
        <button id="addChildren" class="btn btn-default">Add child</button>
        @Html.ActionLink("Back", "Index",new {} ,new { @class = "btn btn-default" })
    </div>
}

