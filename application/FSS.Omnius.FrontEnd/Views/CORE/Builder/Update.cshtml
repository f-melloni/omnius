@model Entitron.Entity.Module
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>
@using (Html.BeginForm("Update", "Config", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        <div class="col-sm-2">
            <label class="control-label">Name</label>
        </div>
        <div class="col-sm-3">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            <label class="control-label">Description</label>
        </div>
        <div class="col-sm-3">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @row = "3" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            <label class="control-label">Enabled?</label>
        </div>
        <div class="col-sm-3">
            @Html.CheckBoxFor(x => x.IsEnabled)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create modul</button>
        </div>
    </div>
}
